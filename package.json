  "license": "ISC",
  "dependencies": {
    "express": "^4.16.2",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.9.1",
    "jest": "^22.0.5",
    "uglify-es": "^3.3.7"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "client/**",
      "webhook/**"
    ]
  },
  "scripts": {
    "prepublish": "npm run docs && npm run lint && npm test",
    "docs": "rm README.md && for x in docs/overview.md docs/webhook.md docs/client.md; do cat $x >> README.md; echo echo >> README.md; done && documentation build lib/** -f md >> README.md",
    "lint": "eslint client/** webhook/** tests/**",
    "test": "jest",
    "uglify": "uglifyjs lib/client/index.js lib/client/**/*.js lib/webhook/*.js -c -m --toplevel -o bundle.min.js"
  }
}
